# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and update the values according to your setup
# DO NOT commit .env files containing real credentials to version control

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
NODE_ENV=development

# =============================================================================
# AI PROVIDER CONFIGURATION
# =============================================================================
# Primary AI provider (gemini, openai, ollama)
AI_PROVIDER=ollama

# Google Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
API_KEY=your_gemini_api_key_here

# OpenAI Configuration (optional)
OPENAI_API_KEY=your_openai_api_key_here

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:3b-instruct
OLLAMA_CHAT_MODEL=qwen2.5:3b-instruct
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# =============================================================================
# VECTOR DATABASE CONFIGURATION
# =============================================================================
VECTOR_DB_URL=http://localhost:5000
VECTOR_DB_PATH=./database/chroma_db

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_ENHANCED_AI=true
ENABLE_VECTOR_SEARCH=true
ENABLE_RAG=true
ENABLE_STREAMING=true

# =============================================================================
# FRONTEND ENVIRONMENT VARIABLES (VITE_*)
# =============================================================================
# These variables are exposed to the frontend and must be prefixed with VITE_

# API Configuration
VITE_API_BASE_URL=http://localhost:5000

# AI Provider Configuration
VITE_OLLAMA_BASE_URL=http://localhost:11434
VITE_OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
VITE_VECTOR_DB_URL=http://localhost:5000

# App Configuration
VITE_APP_ENV=development
VITE_DEBUG=false

# Feature Flags (Frontend)
VITE_ENABLE_ENHANCED_AI=true
VITE_ENABLE_RAG=true
