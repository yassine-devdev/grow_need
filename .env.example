# Enhanced AI Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_CHAT_MODEL=qwen2.5:3b-instruct
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# Vector Database Configuration
VECTOR_DB_URL=http://localhost:5000
VECTOR_DB_PATH=./database/chroma_db

# Security Configuration
FLASK_SECRET_KEY=your-secure-secret-key-change-this-in-production
ENABLE_RATE_LIMITING=true
RATE_LIMIT_AI_REQUESTS=50
RATE_LIMIT_SEARCH_REQUESTS=100
RATE_LIMIT_UPLOAD_REQUESTS=20

# API Keys (Backend Only - Never expose to frontend)
GEMINI_API_KEY=your-gemini-api-key-if-using-gemini
OPENAI_API_KEY=your-openai-api-key-if-using-openai

# Feature Flags
ENABLE_ENHANCED_AI=true
ENABLE_VECTOR_SEARCH=true
ENABLE_RAG=true
ENABLE_STREAMING=true
ENABLE_SECURITY_LOGGING=true

# Development
NODE_ENV=development

# Frontend Environment Variables (Safe to expose)
VITE_API_BASE_URL=http://localhost:5000
VITE_ENABLE_ENHANCED_AI=true
VITE_ENABLE_RAG=true
VITE_ENVIRONMENT=development

# CORS Configuration
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,Authorization,X-Requested-With
